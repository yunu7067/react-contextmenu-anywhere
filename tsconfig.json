{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "es2016",
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "index.d.ts",
      "node_modules/@types"
    ],
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.css"
  ],
  "exclude": [
    "node_modules"
  ]
}
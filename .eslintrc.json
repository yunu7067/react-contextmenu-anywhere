{
    "root": false,
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint",
    ],
    "extends": [
        "airbnb",
        "airbnb-typescript",
        "airbnb/hooks",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "react/function-component-definition": [
            2,
            {
                "namedComponents": "function-declaration"
            }
        ]
    }
}